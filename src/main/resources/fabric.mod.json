{
  "schemaVersion": 1,
  "id": "autosell",
  "version": "${version}",

  "name": "AutoSell",
  "icon": "assets/autosell/icon.png",
  "description": "Mod to automatically sell items to villagers.",
  "authors": ["Larts"],
  "contact": {
    "homepage": "https://modrinth.com/mod/autosell",
    "issues": "https://github.com/LartsAL/AutoSell/issues",
    "sources": "https://github.com/LartsAL/AutoSell"
  },

  "license": "GPL-3.0-only",

  "environment": "client",
  "entrypoints": {
    "client": ["com.lartsal.autosell.AutoSellMod"],
    "modmenu": ["com.lartsal.autosell.modmenu.ModMenuIntegration"]
  },

  "depends": {
    "minecraft": "~${minecraft_version}",
    "fabricloader": ">=${loader_version}",
    "fabric-api": "*",
    "modmenu": ">=${modmenu_version}"
  },
  "suggests": {
    "cloth-config": ">=${cloth_config_version}"
  }
}